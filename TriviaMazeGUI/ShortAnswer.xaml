<UserControl x:Class="TriviaMazeGUI.ShortAnswer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TriviaMazeGUI"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="624">
    <Grid Background="White">
        <TextBlock x:Name="Q" HorizontalAlignment="Left" Margin="69,54,0,0" TextWrapping="WrapWithOverflow" Text="[ Question ]" FontSize="30" VerticalAlignment="Top" Height="140" Width="471"/>
        <TextBlock HorizontalAlignment="Left" Margin="71,228,0,0" TextWrapping="Wrap" Text="Type your answer/guess here: " FontSize="15" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="userInput" Height="29" Margin="284,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Padding="5" Width="200"/>
        <Button Content="Submit" x:Name="SubmitButton" FontSize="15" Padding="5" HorizontalAlignment="Left" Margin="465,298,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>

</UserControl>

<Window x:Class="TriviaMazeGUI.UserPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaMazeGUI"
        mc:Ignorable="d"
        Title="UserPrompt" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        Closed="Window_Closed">
    <StackPanel>

        <TextBlock Text="Enter Name:" Margin="20 20 20 10" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="NameEntry" Text="PlayerName" Margin="20 10 20 20" Width="120" Padding="5 2" FontSize="15" Foreground="LightGray" />
        <Button x:Name="NameButton" Content="Let's Play!!!" HorizontalAlignment="Center" Padding="10 5" FontSize="14" Click="NameButton_Click" />
    </StackPanel>
</Window>

<UserControl x:Class="TriviaMazeGUI.StartPrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TriviaMazeGUI"
             mc:Ignorable="d" 
             d:DesignHeight="326" d:DesignWidth="624">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="79,63,0,0" TextWrapping="Wrap" Text="Enter Name:" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="PlayerName" HorizontalAlignment="Left" Height="28" Margin="212,64,0,0" TextWrapping="Wrap" Text="PlayerName" VerticalAlignment="Top" Width="145" Padding="3"/>
